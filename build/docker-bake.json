{
  "variable": {
    "TAG": {
      "default": "latest"
    }
  },
  "group": {
    "default": {
      "targets": ["core"]
    }
  },
  "target": {
    "core": {
      "context": ".",
      "dockerfile": "build/Dockerfile",
      "tags": [
        "ghcr.io/amirhnajafiz/flap:${TAG}",
        "ghcr.io/amirhnajafiz/flap:latest"
      ],
      "output": ["type=registry"]
    }
  }
}
